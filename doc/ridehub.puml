  }

  ' New: Schedule to generate Trips and affect pricing
  class Schedule extends BaseEntity {
    +scheduleCode: String {unique}
    +startDate: LocalDate
    +endDate: LocalDate
    +daysOfWeek: String ' e.g. "MON,WED,FRI"
    +active: Boolean
  }

